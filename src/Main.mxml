<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   creationComplete="init()"
			   xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[			
			import scripts.OrbitalSimulator;
			
			[Bindable]
			public var sim:OrbitalSimulator;
			public function init():void 
			{
				trace("Works");
				sim = new OrbitalSimulator(mainStage);
				sim.start();
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:HorizontalLayout>
			
		</s:HorizontalLayout>
		</s:layout>
	<s:Group width="100%" height="100%" id="mainStage">
		<s:VGroup x="258" y="19" width="200" height="334">
			<s:DropDownList dataProvider="{sim.objects}" labelField="color"></s:DropDownList>
			<s:Label text="{sim.currentObject().position}"/>
			<s:Label text="{sim.currentObject().velocity}"/>
			<s:Label text="{sim.currentObject().acceleration}"/>
		</s:VGroup>
		
	</s:Group>
</s:Application>
